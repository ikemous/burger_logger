<section class="row">
    <h1 class="col-sm-12 text-center">BURGER CHOMPER</h1>
</section>

<section class="row">
        <img class="col-sm-12 img-thumbnail" src="assets/img/burger.jpg" alt="Image of burger provided by Vernon Adams http://www.fontsquirrel.com/fonts/amatic"/>
</section>
<section class="row">
    <a class="col-sm-12 text-center" href="http://www.freepik.com">Designed by Freepik</a>
</section>

<section class="row">
    <article class="col-sm-6">
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger}}
                {{/unless}}
            {{/each}}
        </ul>
    </article>
    <article class="col-sm-6">
        <ul>
           <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger}}
                {{/if}}
            {{/each}}
            </ul>
        </ul>
    </article>
</section>


<form action="/api/burgers" method="POST">
    <textarea name="burger_name"></textarea>
    <button type="submit">ENTER BURGER</button>
</form>